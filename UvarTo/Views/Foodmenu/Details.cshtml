@model UvarTo.Domain.Entities.Foodmenu

<style>
    body {
        background-color: #F7F7F7;
    }

    .right {
        text-align: right;
    }
    /* Button styles */
    .btn-custom,
    .btn-custom:focus,
    .btn-custom:active,
    .btn-custom:hover {
        background-color: black;
        color: white;
        border: 1px solid black;
        outline: none;
        box-shadow: none;
    }

    div.row {
        padding: 16px 5px 5px 5px;
        margin-top: 15px;
        border: 0 groove #393E46;
        background-color: #EEEEEE;
    }

    div.right {
        background-color: #F7F7F7;
    }

    .row p {
        word-wrap: break-word;
    }
</style>
<body>
    @{
        ViewData["Title"] = "Details";
    }

    <h1> @Html.DisplayFor(model => model.FoodmenuName)</h1>

    <div class="container">
        <h4>What is this foodmenu about</h4>
        <hr />

        <div class="row">
            <p>
                @Html.DisplayFor(model => model.FoodmenuText)
            </p>
        </div>
        <div class="row right">
            <p><a asp-action="Index" class="btn btn-primary btn-block btn-custom">Back to Foodmenu</a></p>
        </div>
    </div>

</body>