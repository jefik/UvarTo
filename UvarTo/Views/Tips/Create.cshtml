@model UvarTo.Domain.Entities.Tips
<style>
    body {
        background-color: #F7F7F7;
    }
    .form-group input:focus,
    .form-group textarea:focus {
        outline: none; 
        border-color: #000 !important; 
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.5) !important; 
    }
</style>
<body>
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tips and tricks</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipName" class="control-label"></label>
                <input asp-for="TipName" class="form-control" />
                <span asp-validation-for="TipName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipText" class="control-label"></label>
                <input asp-for="TipText" class="form-control" />
                <span asp-validation-for="TipText" class="text-danger"></span>
            </div>

             <div class="row no-border">
                    <div class="col-md-4">
                        <p><input type="submit" value="Create" class="btn btn-primary btn-custom" /></p>
                </div>
                    <div class="col-md-4 offset-md-4 text-right-md">
                        <p> <a asp-action="Index" class="btn btn-primary btn-block btn-custom">Back to List</a></p>
                </div>
            </div>
        </form>
    </div>

       
</div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
